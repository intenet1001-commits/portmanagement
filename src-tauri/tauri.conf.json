{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "포트관리기_2026.02.20",
  "version": "2026.02.20",
  "identifier": "com.portmanager.portmanager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:9000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "포트관리기",
        "width": 1000,
        "height": 2000,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  }
}
